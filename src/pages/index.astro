---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Welcome to Green Chronicles";
const pageDescription = "Discover the wonders of botany, plants, and nature's hidden secrets through our minimalist exploration of the green world.";

const features = [
  {
    icon: "fas fa-leaf",
    title: "Vital Oxygen Producers",
    text: "Plants breathe life into our planet, converting sunlight into the air we cherish."
  },
  {
    icon: "fas fa-tree",
    title: "Biodiversity Guardians",
    text: "From ancient ferns to vibrant orchids, they sustain ecosystems teeming with life."
  },
  {
    icon: "fas fa-seedling",
    title: "Healing Allies",
    text: "Nature's pharmacy offers remedies rooted in leaves, roots, and blooms."
  }
];

const contentSections = [
  {
    title: "Dive Deeper",
    content: "Explore our curated collections on botany basics, rare species spotlights, and sustainable gardening tips. Whether you're a budding botanist or a nature enthusiast, there's something for everyone."
  },
  {
    title: "Our Mission",
    content: "We believe in the transformative power of plant knowledge. Through carefully researched content and beautiful imagery, we aim to inspire appreciation for the natural world and foster environmental stewardship."
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-green-900 to-green-700 py-24">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[url('data:image/svg+xml;base64,')]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Welcome to <span class="text-yellow-300">Green Chronicles</span>
        </h1>
        <p class="text-xl md:text-2xl text-green-100 mb-10 max-w-3xl mx-auto">
          Exploring Botany, Plants, and Nature's Secrets
        </p>
        <div class="flex justify-center">
          <a href="#discover" class="px-8 py-4 bg-yellow-400 hover:bg-yellow-500 text-green-900 font-semibold rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg">
            Begin Your Journey
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Why Plants Matter Section -->
  <section id="discover" class="py-20 bg-gradient-to-b from-white to-green-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-green-900 mb-4">Why Plants Matter</h2>
        <div class="w-24 h-1 bg-yellow-400 mx-auto"></div>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300 border border-green-100">
            <div class="w-16 h-16 rounded-full bg-green-100 flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-2xl text-green-700`}></i>
            </div>
            <h3 class="text-xl font-bold text-green-900 mb-3">{feature.title}</h3>
            <p class="text-green-700">{feature.text}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Content Sections -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        {contentSections.map((section, index) => (
          <div key={index} class="mb-8 lg:mb-0">
            <h2 class="text-3xl font-bold text-green-900 mb-4">{section.title}</h2>
            <p class="text-lg text-green-700 mb-6 leading-relaxed">{section.content}</p>
            <div class="flex space-x-4">
              <a href="#" class="px-6 py-3 bg-green-700 hover:bg-green-800 text-white font-medium rounded-lg transition-colors duration-300">
                Learn More
              </a>
              <a href="#" class="px-6 py-3 border-2 border-green-700 text-green-700 hover:bg-green-700 hover:text-white font-medium rounded-lg transition-colors duration-300">
                Explore Topics
              </a>
            </div>
          </div>
        ))}
        
        <div class="relative">
          <div class="bg-gradient-to-br from-green-500 to-green-700 rounded-2xl p-8 shadow-xl">
            <div class="absolute -top-4 -right-4 w-24 h-24 rounded-full bg-yellow-300 opacity-20"></div>
            <div class="absolute -bottom-4 -left-4 w-32 h-32 rounded-full bg-yellow-300 opacity-20"></div>
            <div class="relative z-10">
              <h3 class="text-2xl font-bold text-white mb-4">Featured Collection</h3>
              <p class="text-green-100 mb-6">Discover rare botanical specimens from around the globe in our exclusive collection.</p>
              <div class="flex justify-between items-center">
                <span class="text-yellow-300 font-semibold">12 Rare Species</span>
                <span class="text-white">Updated Daily</span>
              </div>
            </div>
          </div>
          
          <div class="mt-8 grid grid-cols-2 gap-4">
            <div class="bg-green-100 rounded-lg p-4 flex items-center">
              <div class="mr-3 text-green-700">
                <i class="fas fa-book-open text-xl"></i>
              </div>
              <span class="font-medium text-green-800">Educational</span>
            </div>
            <div class="bg-green-100 rounded-lg p-4 flex items-center">
              <div class="mr-3 text-green-700">
                <i class="fas fa-plant"></i>
              </div>
              <span class="font-medium text-green-800">Sustainable</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-800 to-green-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to explore the green world?</h2>
      <p class="text-green-100 text-xl max-w-2xl mx-auto mb-10">Join thousands of nature enthusiasts discovering the magic of plants and botanical science.</p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="#" class="px-8 py-4 bg-yellow-400 hover:bg-yellow-500 text-green-900 font-bold rounded-full transition-all duration-300 transform hover:scale-105">
          Start Exploring
        </a>
        <a href="#" class="px-8 py-4 bg-transparent border-2 border-white text-white hover:bg-white hover:text-green-900 font-bold rounded-full transition-all duration-300">
          View Newsletter
        </a>
      </div>
    </div>
  </section>
</Layout>